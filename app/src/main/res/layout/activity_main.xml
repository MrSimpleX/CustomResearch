<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.simplez.customresearch.MainActivity">

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"/>

    <com.simplez.customresearch.expand.SideTextView
        android:id="@+id/tv_sild"
        android:layout_width="wrap_content"
        android:layout_below="@id/tv_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="这是一个自定义控件"/>

    <com.simplez.customresearch.expand.GlintTextView
        android:id="@+id/glient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_sild"
        android:gravity="center"
        android:textSize="20sp"
        android:text="这是一个自定义控件"/>

    <com.simplez.customresearch.custom.CircleView
        android:layout_below="@+id/glient"
        android:layout_width="400dp"
        android:layout_height="400dp"/>
</RelativeLayout>
